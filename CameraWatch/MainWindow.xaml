<Window x:Class="CameraWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:CameraWatch.Converters"
        Title="Camera Watch Display" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        Width="576" Height="192"
        WindowStartupLocation="Manual"
        Left="0" Top="0">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая половина (Полоса 1) -->
        <Border Grid.Column="0" 
                Background="#CC0000" 
                BorderBrush="#AA0000" 
                BorderThickness="1">
            <TextBlock x:Name="Lane1TextBlock"
                       Text="{Binding Lane1Text}"
                       Visibility="{Binding Lane1Visible, Converter={StaticResource BoolToVisibilityConverter}}"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="10"/>
        </Border>

        <!-- Правая половина (Полоса 2) -->
        <Border Grid.Column="1" 
                Background="#CC0000" 
                BorderBrush="#AA0000" 
                BorderThickness="1,1,1,1">
            <TextBlock x:Name="Lane2TextBlock"
                       Text="{Binding Lane2Text}"
                       Visibility="{Binding Lane2Visible, Converter={StaticResource BoolToVisibilityConverter}}"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="10"/>
        </Border>
    </Grid>
</Window>
